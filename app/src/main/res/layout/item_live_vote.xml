<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_width">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_marginTop="@dimen/common_margin_left_long"
        android:contentDescription="@string/app_name"
        android:src="@drawable/shape_circle_gray" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@id/iv_circle"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="@dimen/common_margin_left_long"
        android:src="@drawable/shape_line_vertical" />

    <TextView
        android:id="@+id/tv_vote_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_circle"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_toRightOf="@id/iv_circle"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/bigTextSize" />

    <RadioGroup
        android:id="@+id/rg_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_vote_title"
        android:layout_below="@id/tv_vote_title"
        android:layout_marginTop="@dimen/topOrbottomPaddingLong"
        android:layout_toRightOf="@id/iv_circle" />
</RelativeLayout>