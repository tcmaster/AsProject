<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.tonight8.ui.activity.other.SelectCitiyActivity">

    <EditText
        android:id="@+id/et_search_citiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/et_search_citiy"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_select_citiy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none" />

        <com.android.tonight8.ui.view.sortlistview.SideBar
            android:id="@+id/sb_right_word"
            android:layout_width="@dimen/common_margin_left_long"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
