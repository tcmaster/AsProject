<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:contentDescription="@string/app_name"
        android:src="@drawable/shape_circle_gray" />

    <ImageView
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@id/iv_circle"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:src="@drawable/shape_line_vertical" />
    <TextView
        android:id="@+id/tv_time"
        style="@style/wrap"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left_long"
        android:layout_toRightOf="@id/iv_circle"
        android:text="@string/app_name"
        android:textColor="@color/gray"
        android:textSize="@dimen/smallTextSize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin_left"
        android:layout_toRightOf="@id/tv_time"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            style="@style/wrap"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/middleTextSize" />

        <TextView
            android:id="@+id/tv_achieve_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="@dimen/smallTextSize" />

        <com.android.tonight8.ui.view.UserPhotoShowView
            android:id="@+id/ll_show_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>